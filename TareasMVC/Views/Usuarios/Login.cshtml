@model LoginDTO
@{
    ViewData["Title"] = "Login";
}
<h1>Login</h1>

@if (ViewData.Keys.Contains("mensaje"))
{
    <p style="color: red">@ViewData["mensaje"]</p>
}

<div class="card">
    <div class="card-body">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" autocomplete="off" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" autocomplete="off" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" asp-for="Recuerdame"/>
                <label asp-for="Recuerdame" class="form-label"></label>
            </div>

            <button class="btn btn-primary">Login</button>
            <a asp-action="Registro" class="btn btn-success">Crear nueva cuenta</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}
