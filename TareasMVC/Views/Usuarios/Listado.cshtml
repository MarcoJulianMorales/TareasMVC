@model UsuariosListadoViewModel
@{
    ViewData["Title"] = "Listado de Usuarios";
    Layout = "../Shared/_Layout";
}

@if(Model.Mensaje is not null)
{
    <div class="alert alert-success" role="alert">
        @Model.Mensaje
    </div>
}

<h1>Listado de Usuarios</h1>
@if(Model.Usuarios is not null)
{
    <form method="post">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Accion</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var usuario in Model.Usuarios)
                {
                    <tr>
                        <td>
                            <button class="me-2 btn btn-primary" asp-action="HacerAdmin" asp-route-email="@usuario.Email">Hacer Admin</button>
                            <button class="me-2 btn btn-secondary" asp-action="RemoverAdmin" asp-route-email="@usuario.Email">Remover Admin</button>
                        </td>
                        <td>
                            @usuario.Email
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
}
else
{
    <p>No hay usuarios para mostrar</p>
}
